@{
    ViewBag.Title = "RevisePassword";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>

    layui.use(['jquery', 'form', 'tablePlug','common'], function () {
        var form = layui.form,
            common=layui.common
            $ = layui.$;
        var keyValue = $.request("keyValue");
        $(function () {
            common.ajax({
                url: "/SystemManage/User/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    form.val("useradmin", data);
                }
            });
        });
        //监听提交
        form.on('submit(saveBtn)', function (data) {
            var postData = data.field;
            postData["keyValue"] = keyValue;
            common.submitForm({
                loading: "正在修改数据...",
                url: "/SystemManage/User/SubmitRevisePassword",
                param: postData,
                success: function () {
                }
            })
            return false;
        });
    });
</script>
<div class="layuimini-container">
    <div class="layuimini-main">
        <div class="layui-form layuimini-form" lay-filter="useradmin">
            <div class="layui-form-item">
                <label class="layui-form-label required">账户</label>
                <div class="layui-input-block">
                    <input type="text" id="F_Account" name="F_Account" lay-verify="required" readonly class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label required">姓名</label>
                <div class="layui-input-block">
                    <input type="text" id="F_RealName" name="F_RealName" lay-verify="required" readonly class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">密码</label>
                <div class="layui-input-block">
                    <input type="password" id="F_UserPassword" name="F_UserPassword" lay-verify="required" class="layui-input ">
                </div>
            </div>
            <div class="layui-form-item layui-hide">
                <button class="layui-btn" lay-submit id="submit" lay-filter="saveBtn">确认保存</button>
            </div>
        </div>
    </div>
</div>
